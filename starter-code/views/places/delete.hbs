<h1>Deleting place</h1>

{{#with place}}
<div class="place">
  <h2 class="title">{{name}}</h2>
  <p class="type">{{type}}</p>
</div>
<form action="/places/delete" method="post" class="form">
  <input type="hidden" name="_id" value="{{_id}}">
  <p class="confirm">Are you sure? ðŸ¤”</p>
  <div class="actions">
    <a href="/places/{{_id}}" class="button button-cancel">Cancel</a>
